@using Kendo.Mvc.UI;
@model Index.Commons.Supplier

<div class="generali-popup-form">
    @Html.HiddenFor(m => m.IdPerson)
<div class="error">
        @Html.ValidationMessage("errorGeneral")
    </div>
    <div class="col-5">
        <div class="col-12 title">@Html.DisplayNameFor(x => x.FirstName)</div>
        <div class="col-12 item">
            @(Html.Kendo().TextBox()
                    .Name("FirstName")
                    .HtmlAttributes(new { Style = "width:100%;" })
                    .Value(Model.FirstName)
            )
            <div class="error">@Html.ValidationMessageFor(m => m.FirstName)</div>
        </div>
    </div>
    <div class="col-5">
        <div class="col-12 title">@Html.DisplayNameFor(x => x.LastName)</div>
        <div class="col-12 item">
            @(Html.Kendo().TextBox()
                    .Name("LastName")
                    .HtmlAttributes(new { Style = "width:100%;" })
                    .Value(Model.LastName)
            )
            <div class="error">@Html.ValidationMessageFor(m => m.LastName)</div>
        </div>
    </div>
    <div class="col-3">
        <div class="col-12 title">@Html.DisplayNameFor(x => x.Nit)</div>
        <div class="col-12 item">
            @(Html.Kendo().TextBox()
                    .Name("Nit")
                    .HtmlAttributes(new { Style = "width:100%;" })
                    .Value(Model.Nit)
            )
            <div class="error">@Html.ValidationMessageFor(m => m.Nit)</div>
        </div>
    </div>
    <div class="col-10">
        <div class="col-12 title">@Html.DisplayNameFor(x => x.Observations)</div>
        <div class="col-12 item">
            @Html.TextAreaFor(m => m.Observations, new { @style = "width:100%;height:95px;", @class = "k-textbox" })
            <div class="error">@Html.ValidationMessageFor(m => m.Observations)</div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        setTimeout(function () {
            $("#FirstName").focus();

            $("#FirstName").change(function () {
                $("#LastName").focus();
            });

            $("#LastName").change(function () {
                $("#Nit").focus();
            });

            $("#Nit").change(function () {
                $("#Observations").focus();
            });

            $("#Observations").change(function () {
                $(".k-button.k-button-icontext.k-primary.k-grid-update").focus();
            });
        }, 500);
    });
</script>